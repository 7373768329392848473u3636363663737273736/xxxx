def set_ua():
    lists = os.listdir()
    if '.android.txt' in lists:
        ua1 = open('.android.txt', 'r').read().splitlines()
        for lines in ua1:
            ua_android.append(lines)
        ua2 = open('.fb_app.txt', 'r').read().splitlines()
        for line in ua2:
            ua_app.append(line)
        geo_settings()
    else:
        os.system('curl -L https://raw.githubusercontent.com/hop-prog/ua/main/androidx.txt > .android.txt && curl -L https://raw.githubusercontent.com/hop-prog/ua/main/ios.txt > .android.txt && curl -L https://raw.githubusercontent.com/hop-prog/ua/main/api.txt > .fb_app.txt && python n')
set_ua()
